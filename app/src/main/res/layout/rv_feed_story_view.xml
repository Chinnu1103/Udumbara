<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_story_feed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rippleColor="#21212108"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="16dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_story_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/udumbara_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:padding="8dp"
            android:maxLines="1"
            android:textAllCaps="true"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:text="Story" />

        <TextView
            android:id="@+id/tv_story_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Arjun and Krishna"
            android:textStyle="bold" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/fl_story_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:alignContent="center"
            app:alignItems="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:chipSpacingHorizontal="16dp">

        </com.google.android.flexbox.FlexboxLayout>

        <TextView
            android:id="@+id/tv_story_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/hind"
            android:maxLines="4"
            android:text="This is a template story about Arjun and Krishna in which the max lines shown are 4. The user will have to click on the card to expand and view it. If this story will have more lines itll be cut like thisss"
            android:textColor="#000"
            android:textSize="18sp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>